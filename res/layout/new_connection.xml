<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffffff"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	
	<TableLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		
		<TableRow>
			<TextView
				android:singleLine="true" 
				android:text="@string/host" 
				android:padding="5px" />
				
			<EditText
				android:id="@+id/host"
				android:singleLine="true" 
				android:width="240px" />
		</TableRow>
		
		<TableRow>
			<TextView
				android:singleLine="true" 
				android:text="@string/port" 
				android:padding="5px" />
				
			<EditText
				android:id="@+id/port"
				android:singleLine="true" />
		</TableRow>
		
		<TableRow>
			<TextView
				android:singleLine="true" 
				android:text="@string/username" 
				android:padding="5px" />
				
			<EditText
				android:id="@+id/user"
				android:singleLine="true" />
		</TableRow>
		
		<TableRow>
			<TextView
				android:singleLine="true" 
				android:text="@string/password" 
				android:padding="5px" />
				
			<EditText
				android:id="@+id/pass"
				android:singleLine="true"
				android:password="true" />
		</TableRow>
		
		<TableRow>
 			<TextView
				android:singleLine="true" 
				android:text="@string/application_selection" 
				android:padding="5px" />
				
			<RadioGroup 
				android:id="@+id/app"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:checkedButton="@+id/rhythmbox"
				android:orientation="vertical">
				
				<RadioButton
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/rhythmbox_item" 
					android:id="@+id/rhythmbox_item" />
					
				<RadioButton
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/amarok_item" 
					android:id="@+id/amarok_item"/>
					
			</RadioGroup>
		</TableRow>
	</TableLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_gravity="center_horizontal">
		
		<Button
		android:id="@+id/cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/cancel" />
		
		<Button
		android:id="@+id/connect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/connect" />	
	</LinearLayout>
	
</LinearLayout>
