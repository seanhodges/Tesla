<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:paddingTop="5dip"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
	android:layout_gravity="center_horizontal">
	
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<!-- 
		<ImageView
		android:id="@+id/app_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="10dip"
		android:paddingLeft="10dip"
		android:background="@null"
		android:src="@drawable/app_icon_rhythmbox"
		android:layout_gravity="left" />
		 -->	
		<ImageButton
		android:id="@+id/pc_power"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="10dip"
		android:paddingRight="10dip"
		android:background="@null"
		android:src="@drawable/power"
		android:layout_gravity="right" />
		
	</FrameLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="40dip"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal">
		
		<ImageButton
		android:id="@+id/last_song"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:src="@drawable/prev_song" />
		
		<!--
		<ToggleButton
		android:id="@+id/play_pause"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:drawableTop="@drawable/play_pause"
		android:textOff=""
		android:textOn="" />
		-->
		
		<ImageButton
		android:id="@+id/play_pause"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:src="@drawable/play_pause" />
		
		<ImageButton
		android:id="@+id/next_song"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:src="@drawable/next_song" />
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="30dip"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal">
		
		<ImageView
		android:id="@+id/album_cover"
		android:paddingTop="25dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxWidth="80px"
		android:maxHeight="80px"
		android:scaleType="fitCenter"
		android:src="@drawable/album_cover" />
		
		<TableLayout
			android:paddingLeft="20dip"
			android:paddingTop="35dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		
			<TableRow 
				android:paddingBottom="2dip">
				
				<tesla.app.ui.widget.ScrollingTextView
				android:id="@+id/song_title"
				android:layout_width="150dip"
				android:layout_height="wrap_content"
				android:text="@string/info_title"
				android:singleLine="true" />
			</TableRow>
			
			<TableRow 
				android:paddingBottom="2dip">
				
				<tesla.app.ui.widget.ScrollingTextView
				android:id="@+id/song_artist"
				android:layout_width="150dip"
				android:layout_height="wrap_content"
				android:text="@string/info_artist"
				android:singleLine="true" />
			</TableRow>
			
			<TableRow 
				android:paddingBottom="2dip">
				
				<tesla.app.ui.widget.ScrollingTextView
				android:id="@+id/song_album"
				android:layout_width="150dip"
				android:layout_height="wrap_content"
				android:text="@string/info_album"
				android:singleLine="true" />
			</TableRow>
			
		</TableLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1">
		
		<Button
		android:id="@+id/playlist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="left|bottom"
		android:text="@string/playlist" />
		
		<Button
		android:id="@+id/volume"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="right|bottom"
		android:text="@string/volume" />	
	</LinearLayout>
	
</LinearLayout>
